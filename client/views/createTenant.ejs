<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Tenant Creation</title>
        <link rel="stylesheet" href="/styles.css">
    </head>
    <body>
        <div id="form">
            <h1>CREATE TENANT</h1>
            <form action="/create/tenant" method="post">
                <label for="title">Title:</label>
                <select name="title" id="title" required>
                    <option></option>
                    <option value="Mx">Mx</option>
                    <option value="Ms">Ms</option>
                    <option value="Mr">Mr</option>
                    <option value="Mrs">Mrs</option>
                    <option value="Miss">Miss</option>
                    <option value="Dr">Dr</option>
                    <option value="other">Other (Specify)</option>
                </select>
                <label for="other"></label>
                <input type="text" id="otherInput" name ='otherInput' placeholder="Prof" required>
                <label for="fname">First Name(s):</label>
                <input type="text" id="fname" name ='fname' pattern="[a-zA-z]+" minlength="3" required>
                <label for="sname">Surname:</label>
                <input type="text" id="sname" name ='sname' pattern="[a-zA-z]+" minlength="3" required>
                <label for="mobile">Mobile Number:</label>
                <input type="text" id="mobile" name ='mobile' pattern='[0-9]{10}' placeholder='Number Length 10' required>
                <label for="email">Email:</label>
                <input type="email" id="email" name ='email' placeholder='my.example@myapp.local' required>
                <label for="address1">Address Line 1:</label>
                <input type="text" id="address1" name ='address1' minlength="3" required>
                <label for="address2">Address Line 2:</label>
                <input type="text" id="address2" name ='address2'>
                <label for="town">City/Town:</label>
                <input type="text" id="town" name ='town' pattern="[a-zA-z]+" minlength="3" required>
                <label for="city">County:</label>
                <input type="text" id="city" name ='city' pattern="[a-zA-z]+" minlength="3" required>
                <label for="eircode">Eircode:</label>
                <input type="text" id="eircode" name ='eircode' pattern="^[ACDEFHKNPRTVWXYacdefhknprtvwxy]{1}[0-9]{2}[ACDEFHKNPRTVWXYacdefhknprtvwxy0-9]{4}$">
                <br>
                <button class ='otherButton' onclick="emailConvert()" name="button" value="createB" type="submit">Create Tenant</button>
            </form>
            <form action="/create/tenant" method="post">
                <button class ='otherButton'style="margin-top: 10px;"name="button" value="random" type="submit">Create Random Tenant</button>
            </form>
        </div>
        <script>    
            const title = document.querySelectorAll("#title");
            const otherInput = document.getElementById("otherInput");

            //Making sure to make input field visible and required when title == other
            title.forEach(element => {
                element.addEventListener('change', () => {
                    if (element.value === "other") {
                        otherInput.style.visibility = "visible";
                        otherInput.setAttribute('required', true);
                    } else {
                        otherInput.style.visibility = "hidden";
                        otherInput.removeAttribute('required');
                        otherInput.value = '';
                    }
                });
            });

            //converts email to lowercase
            function emailConvert() {
                // Code to convert email address to lowercase
                const email = document.getElementById("email");
                email.value = email.value.toLowerCase();
            }
        </script>
    </body>
</html>
